            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
             <LinearLayout
                 android:id="@+id/ll_1"
                 android:padding="12dp"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toStartOf="@id/tv"
                 app:layout_constraintStart_toStartOf="parent"
                 android:background="@drawable/color_white_background_border_f1f1f1_corner_13"
                 android:orientation="horizontal">
                     <ImageView
                         android:layout_width="23dp"
                         android:layout_height="wrap_content"
                         android:adjustViewBounds="true"
                         android:src="@drawable/month"/>
                     <TextView
                         android:id="@+id/tv_first_date"
                         android:textColor="@color/black"
                         android:layout_gravity="center"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginEnd="20dp"
                         android:text="2021-10-01"/>
                 </LinearLayout>
            <TextView
                android:id="@+id/tv"
                app:layout_constraintStart_toEndOf="@id/ll_1"
                app:layout_constraintTop_toTopOf="@id/ll_1"
                app:layout_constraintBottom_toBottomOf="@id/ll_1"
                app:layout_constraintEnd_toStartOf="@id/ll_2"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "/>

            <LinearLayout
                android:id="@+id/ll_2"
