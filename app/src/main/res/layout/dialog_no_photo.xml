<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_white_background_corner_13"
        android:orientation="vertical"
        android:padding="21dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="배변 사진 미등록!"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="배변 사진을 기록하면 AI 분석을 통해\n배변 점수와 자세한 나의 건강상태를\n분석해 바로 알려드립니다!"/>
        <ImageView
            android:layout_width="200dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:src="@drawable/no_photo_icon"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_weight="1"
                android:textColor="#ff6e75"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="건너뛰기"
                android:layout_marginEnd="7.5dp"
                android:background="@drawable/color_white_background_border_f1f1f1_corner_13"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_start"
                android:layout_weight="1"
                android:layout_marginStart="7.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="사진 기록하기"
                android:background="@drawable/color_ff6e75_background_corner_13"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
</layout>