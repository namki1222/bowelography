<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SurveyActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <fragment
        android:id="@+id/top_fragment"
        android:name="com.rightcode.bowelography.fragment.TopFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="TopFragment"
        tools:layout="@layout/fragment_top" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_homefocus"
        app:layout_constraintTop_toBottomOf="@id/top_fragment"/>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@id/top_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_start"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="14dp"/>
        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        <EditText
            android:id="@+id/et_old"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:inputType="number"
            android:textSize="14dp"
            android:maxLength="2"
            android:hint="숫자"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="세"/>
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fc656a"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질환 여부"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="14dp"/>
        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:id="@+id/tv_disease_yes"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="O"/>
            <TextView
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:id="@+id/tv_disease_no"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="12dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="X"/>
            <TextView
                android:layout_weight="1"
                android:onClick="onButtonClick"
                android:id="@+id/tv_disease_doubt"
                android:layout_marginStart="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="의심"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_disease_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어떤 질환을 가지고 계신가요?"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="14dp"/>
        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="13dp"
                android:onClick="onButtonClick"
                android:id="@+id/tv_disease_1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="궤양성 대장염"/>
            <TextView
                android:textSize="13dp"
                android:onClick="onButtonClick"
                android:id="@+id/tv_disease_2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="12dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="크론병"/>
            <TextView
                android:textSize="13dp"
                android:onClick="onButtonClick"
                android:id="@+id/tv_disease_3"
                android:layout_marginStart="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="항문질환"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:onClick="onButtonClick"
                android:id="@+id/tv_disease_4"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="과민성대장증후군"/>
            <TextView
                android:onClick="onButtonClick"
                android:id="@+id/tv_disease_5"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="12dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="대장암"/>
        </LinearLayout>
            <EditText
                android:id="@+id/et_disease"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="14dp"
                android:hint="기타고민 입력"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/line_homefocus"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_disease_visible_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_yes_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떤 질환이 의심되시나요?"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textSize="14dp"/>
            <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="13dp"
                    android:onClick="onButtonClick"
                    android:id="@+id/tv_disease_1_1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_select"
                    android:textColor="@drawable/text_select"
                    android:textStyle="bold"
                    android:text="궤양성 대장염"/>
                <TextView
                    android:textSize="13dp"
                    android:onClick="onButtonClick"
                    android:id="@+id/tv_disease_2_1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="12dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_select"
                    android:textColor="@drawable/text_select"
                    android:textStyle="bold"
                    android:text="크론병"/>
                <TextView
                    android:textSize="13dp"
                    android:onClick="onButtonClick"
                    android:id="@+id/tv_disease_3_1"
                    android:layout_marginStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_select"
                    android:textColor="@drawable/text_select"
                    android:textStyle="bold"
                    android:text="항문질환"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:onClick="onButtonClick"
                    android:id="@+id/tv_disease_4_1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_select"
                    android:textColor="@drawable/text_select"
                    android:textStyle="bold"
                    android:text="과민성대장증후군"/>
                <TextView
                    android:onClick="onButtonClick"
                    android:id="@+id/tv_disease_5_1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="12dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_select"
                    android:textColor="@drawable/text_select"
                    android:textStyle="bold"
                    android:text="대장암"/>
            </LinearLayout>
            <EditText
                android:id="@+id/et_disease_1"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="14dp"
                android:hint="기타고민 입력"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/line_homefocus"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고민이 있으신가요?"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="14dp"/>
        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:onClick="onButtonClick"
                android:id="@+id/tv_worry_water"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="설사"/>
            <TextView
                android:onClick="onButtonClick"
                android:id="@+id/tv_worry_no_poop"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="12dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="변비"/>
            <TextView
                android:onClick="onButtonClick"
                android:id="@+id/tv_worry_indigestion"
                android:layout_marginStart="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="소화불량"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:onClick="onButtonClick"
                android:id="@+id/tv_worry_gas"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="가스"/>
            <TextView
                android:onClick="onButtonClick"
                android:id="@+id/tv_worry_diet"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="12dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_select"
                android:textColor="@drawable/text_select"
                android:textStyle="bold"
                android:text="다이어트"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_worry"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="14dp"
            android:hint="기타고민 입력"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line_homefocus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용약관 동의"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:textSize="14dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/checkbox_1"
                android:onClick="onButtonClick"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/checkbox_select"/>
            <TextView
                android:layout_marginStart="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모든 약관에 동의합니다"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:onClick="onButtonClick"
                android:id="@+id/checkbox_2"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/checkbox_select"/>
            <TextView
                android:id="@+id/tv_service_1"
                android:onClick="onButtonClick"
                android:layout_marginStart="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fc656a"
                android:text="서비스 이용약관"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에 동의합니다 "/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:onClick="onButtonClick"
                android:id="@+id/checkbox_3"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/checkbox_select"/>
            <TextView
                android:id="@+id/tv_service_2"
                android:onClick="onButtonClick"
                android:layout_marginStart="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fc656a"
                android:text="개인정보 취급방침"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에 동의합니다 "/>

        </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="bottom"
        android:id="@+id/tv_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textColor="@drawable/text_select"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="시작하기"
        android:onClick="onButtonClick"
        android:background="@drawable/button_select"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>