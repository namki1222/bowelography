                    android:src="@drawable/color_selector_6"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                android:textSize="14dp"
                android:text="대변량"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_amount_1"
                    android:onClick="emoteclick"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/amount_selector_1"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:id="@+id/iv_amount_2"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/amount_selector_2"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:id="@+id/iv_amount_3"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/amount_selector_3"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                android:textSize="14dp"
                android:text="혈변"/>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_blood_1"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blood_amount_1"
                    android:layout_marginEnd="12dp"/>
                <ImageView
                    android:id="@+id/iv_blood_2"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blood_amount_2"
                    android:layout_marginEnd="12dp"/>
                <ImageView
                    android:id="@+id/iv_blood_3"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blood_amount_3"
                    android:layout_marginEnd="12dp"/>
                <ImageView
                    android:id="@+id/iv_blood_4"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blood_amount_4"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_blood_location"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="23dp"
                    android:textSize="14dp"
                    android:text="혈변 위치"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textColor="#828282"
                    android:textStyle="bold"
                    android:layout_marginTop="23dp"
                    android:textSize="14dp"
                    android:text="다중 선택"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:onClick="emoteclick"
                    android:id="@+id/iv_blood_locate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/text_select"
                    android:background="@drawable/button_select"
                    android:padding="11dp"
                    android:text="대변과 함께"/>
                <TextView
                    android:onClick="emoteclick"
                    android:id="@+id/iv_blood_locate2"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/text_select"
                    android:background="@drawable/button_select"
                    android:padding="11dp"
                    android:text="대변과 따로"/>
            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="23dp"
                    android:textSize="14dp"
                    android:text="기타"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textColor="#828282"
                    android:textStyle="bold"
                    android:layout_marginTop="23dp"
                    android:textSize="14dp"
                    android:text="다중 선택"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:onClick="emoteclick"
                    android:id="@+id/iv_another_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/text_select"
                    android:background="@drawable/button_select"
                    android:padding="11dp"
                    android:text="점액"/>
                <TextView
                    android:onClick="emoteclick"
                    android:id="@+id/iv_another_2"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/text_select"
                    android:background="@drawable/button_select"
                    android:padding="11dp"
                    android:text="기름기"/>
                <TextView
                    android:onClick="emoteclick"
                    android:id="@+id/iv_another_3"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/text_select"
                    android:background="@drawable/button_select"
                    android:padding="11dp"
                    android:text="둥둥뜸"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/tv_information"
                android:padding="7dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="기타정보"/>
            <ImageView
                android:id="@+id/question_2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="@id/tv_information"
                app:layout_constraintBottom_toBottomOf="@id/tv_information"
                android:src="@drawable/question"
                app:layout_constraintStart_toEndOf="@id/tv_information"/>
            <ImageView
                android:id="@+id/iv_other_information"
                android:layout_width="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/information_select"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e0e0e0"/>
        <LinearLayout
            android:id="@+id/ll_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                android:textSize="14dp"
                android:text="복통"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_emote1_1"
                    android:src="@drawable/pain_emote_1"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:id="@+id/iv_emote1_2"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:src="@drawable/pain_emote_2"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:id="@+id/iv_emote1_3"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:src="@drawable/pain_emote_3"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:id="@+id/iv_emote1_4"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
