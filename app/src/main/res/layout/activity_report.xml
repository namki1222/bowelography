                    android:layout_height="70dp"
                    android:src="@drawable/pain_emote_4"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                android:textSize="14dp"
                android:text="대변냄새"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_emote2_1"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/smell_emote_1"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:id="@+id/iv_emote2_2"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/smell_emote_2"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:id="@+id/iv_emote2_3"
                    android:onClick="emoteclick"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
