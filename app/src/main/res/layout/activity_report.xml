<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ReportActivity">
    <fragment
        android:id="@+id/top_fragment"
        android:name="com.rightcode.bowelography.fragment.TopFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="TopFragment"
        tools:layout="@layout/fragment_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_homefocus"
        app:layout_constraintTop_toBottomOf="@id/top_fragment"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/top_fragment"
        app:layout_constraintBottom_toTopOf="@id/tv_start"
        android:layout_height="0dp">
    <LinearLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/time"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배변 시간"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time"
                android:padding="7dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="AM 11:50"/>
            <ImageView
                android:layout_width="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/time"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fc656a"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/report_notice"/>

        <TextView
            android:id="@+id/photo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배변 사진"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_photo_minus"
                android:visibility="gone"
                android:elevation="1dp"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/image_minus"/>
        <ImageView
            android:id="@+id/iv_photo_add"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/photo_add"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/tv_outside"
                android:padding="7dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="외형정보"/>
            <ImageView
                android:id="@+id/question_1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="@id/tv_outside"
                app:layout_constraintBottom_toBottomOf="@id/tv_outside"
                android:src="@drawable/question"
                app:layout_constraintStart_toEndOf="@id/tv_outside"/>
            <ImageView
                android:id="@+id/iv_outside_information"
                android:layout_width="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/information_select"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e0e0e0"/>
        <LinearLayout
            android:id="@+id/ll_outside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                android:textSize="14dp"
                android:text="대변 형태"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_shape_1"
                    android:layout_weight="1"
                    android:src="@drawable/shape_selector_1"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="5dp"/>
                <ImageView
                    android:id="@+id/iv_shape_2"
                    android:layout_weight="1"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/shape_selector_2"
                    android:layout_marginEnd="5dp"/>
                <ImageView
                    android:id="@+id/iv_shape_3"
                    android:layout_weight="1"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/shape_selector_3"
                    android:layout_marginEnd="5dp"/>
                <ImageView
                    android:id="@+id/iv_shape_4"
                    android:layout_weight="1"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/shape_selector_4"
                    android:layout_marginEnd="5dp"/>
                <ImageView
                    android:id="@+id/iv_shape_5"
                    android:layout_weight="1"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/shape_selector_5"
                    android:layout_marginEnd="5dp"/>
                <ImageView
                    android:id="@+id/iv_shape_6"
                    android:layout_weight="1"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/shape_selector_6"
                    android:layout_marginEnd="5dp"/>
                <ImageView
                    android:id="@+id/iv_shape_7"
                    android:layout_weight="1"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/shape_selector_7"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="23dp"
                android:textSize="14dp"
                android:text="대변 색깔"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/iv_color_1"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_selector_1"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/iv_color_2"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_selector_2"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/iv_color_3"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_selector_3"
                    android:layout_marginEnd="7dp"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/iv_color_4"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_selector_4"
                    android:layout_marginEnd="7dp"/>

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/iv_color_5"
                    android:onClick="emoteclick"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/color_selector_5"
