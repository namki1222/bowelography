<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ReportExtraActivity">
    <fragment
        android:id="@+id/top_fragment"
        android:name="com.rightcode.bowelography.fragment.TopFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="TopFragment"
        tools:layout="@layout/fragment_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_homefocus"
        app:layout_constraintTop_toBottomOf="@id/top_fragment"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_fragment"
        app:layout_constraintBottom_toTopOf="@id/tv_start">
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="왜 이런 대변이 나왔을까요?"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14dp"
                android:text="@string/extra_report"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/color_white_background_border_f1f1f1_corner_13"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="28dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="3dp"
                android:id="@+id/iv_favorite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="20dp"
                android:src="@drawable/favorite_emote"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"/>
            <View
                android:layout_marginStart="12dp"
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/line_homefocus"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_favorite"/>
            <ImageView
                android:layout_marginStart="12dp"
                android:id="@+id/iv_emote"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/view1"
                android:layout_width="20dp"
                android:src="@drawable/water_emote"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"/>
            <View
                android:layout_marginStart="12dp"
                android:id="@+id/view2"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/line_homefocus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_emote"/>
            <EditText
                android:id="@+id/et_string"
                android:layout_marginStart="12dp"
                android:layout_width="0dp"
                android:hint="습관입력"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/tv_add_button"
                app:layout_constraintTop_toTopOf="@id/tv_add_button"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/view2"
                app:layout_constraintEnd_toStartOf="@id/tv_add_button"/>
            <TextView
                android:id="@+id/tv_add_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 추가"
                android:textSize="15dp"
                android:textColor="#fa434c"
                android:textStyle="bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
            <ImageView
                android:src="@drawable/favorite_on"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="즐겨찾기"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_extra_favorite"/>
            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_homefocus"
                app:layout_constraintTop_toBottomOf="@id/top_fragment"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_no_favorite"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_extra_favorite"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_checkbox"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/checkbox_select"/>
                <TextView
                    android:id="@+id/tv_service"
                    android:layout_marginStart="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="잘 모르겠어요"/>
                <ImageView
                    android:layout_marginStart="5dp"
                    android:id="@+id/question_1"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="@id/tv_outside"
                    app:layout_constraintBottom_toBottomOf="@id/tv_outside"
                    android:src="@drawable/question"
                    app:layout_constraintStart_toEndOf="@id/tv_outside"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="등록완료"
        android:textColor="@color/white"
        android:background="@drawable/color_pink_fc656a_background_corner_13"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>